{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "types": ["vite-plugin-svgr/client"],
    "baseUrl": "./src",
    "paths": {
      "#types/*": ["@types/*"],
      "#assets/*": ["assets/*"],
      "#components/*": ["components/*"],
      "#context/*": ["context/*"],
      "#helper/*": ["helper/*"],
      "#hooks/*": ["hooks/*"],
      "#layout/*": ["layout/*"],
      "#listeners/*": ["listeners/*"],
      "#locales/*": ["locales/*"],
      "#mask/*": ["mask/*"],
      "#pages/*": ["pages/*"],
      "#reports/*": ["reports/*"],
      "#theme/*": ["theme/*"],
      "#errors/*": ["errors/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["./updateLocales.js"]
}
